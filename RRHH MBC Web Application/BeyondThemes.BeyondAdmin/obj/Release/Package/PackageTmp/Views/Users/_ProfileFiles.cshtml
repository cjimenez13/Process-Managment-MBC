@model Model.ListUserFilesModel

<!-- Button to add file-->
<div class="row" style="margin-bottom:15px">
    <button class="btn btn-success" style="float:right; margin-right:5%" data-toggle="modal" data-target="#modal_addUserFile">Agregar archivo</button>
</div>
<!-- List of files -->
<div class="flip-scroll">
    <table class="table flip-content table-hover">
        <!-- column titles -->
        <thead class="flip-content bordered-primary">
            <tr>
                <th>Nombre</th>
                <th>Fecha</th>
                <th>Descripcion</th>
                <th>Descargar</th>
                <th>Borrar</th>
            </tr>
        </thead>
        <tbody>
            <!-- Table data-->
            @foreach (var file in Model.filesList)
            {
                string imgURL = "data:" + file.fileType + ";base64," + file.fileBase64;
                <tr>
                    <td onclick="location.href = '@(imgURL)'">@file.name</td>
                    <td onclick="location.href = '@(imgURL)'">@file.createdDate</td>
                    <td onclick="location.href = '@(imgURL)'">@file.description</td>
                    <td><button class="btn btn-sky" onclick="downloadFile('@file.fileBase64','@file.fileType', '@file.fileName')"><i class="fa fa-download"></i></button></td>
                    <td><button class="btn btn-danger" onclick="deleteUserFile('@file.id_file','@file.name',this)" ><i class="fa fa-trash"></i></button></td>
                </tr>
            }
        </tbody>
    </table>
</div>
@{ Html.RenderPartial("/Views/Users/_AddUserFile.cshtml", new Model.AddFileModel());}
