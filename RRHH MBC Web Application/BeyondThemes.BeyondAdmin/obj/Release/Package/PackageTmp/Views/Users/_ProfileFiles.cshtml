@model Model.ListUserFilesModel

<!-- Button to add file-->
<div class="row" style="margin-bottom:15px">
    <button class="btn btn-success" style="float:right; margin-right:5%" data-toggle="modal" data-target="#modal_addUserFile">Agregar archivo</button>
</div>
<!-- List of files -->
<div class="flip-scroll">
    <table class="table flip-content table-hover">
        <!-- column titles -->
        <thead class="flip-content bordered-primary">
            <tr>
                <th>Nombre</th>
                <th>Fecha</th>
                <th>Descripcion</th>
                <th>Descargar</th>
                <th>Borrar</th>
            </tr>
        </thead>
        <tbody>
            <!-- Table data-->
            @foreach (var file in Model.filesList)
            {
                <tr>
                    <td>@file.name</td>
                    <td>@file.createdDate</td>
                    <td>@file.description</td>
                    @{ 
                        string imgURL = "data:"+file.fileType+";base64," + file.fileBase64;
                    }
                    <td><img src=@file.fileBase64 class="header-avatar avatar" /></td>
                    <td><button class="btn btn-sky" download="@imgURL"><i class="fa fa-download"></i></button></td>
                    <td><button class="btn btn-danger"><i class="fa fa-trash"></i></button></td>
                </tr>
            }
        </tbody>
    </table>
</div>
@{ Html.RenderPartial("/Views/Users/_AddUserFile.cshtml", new Model.AddFileModel());}
