@{
    Layout = "~/Views/Shared/_Default.cshtml";
    ViewBag.Title = "Grupos";
    ViewBag.Description = "Información del grupo";
}

<div class="row">
    <div class="col-xs-12">
        <div class="widget">
            <!--Widget Header-->
            <div class="widget-header bordered-top bordered-primary">
                <span class="widget-caption">Grupo 1</span>
                <div class="widget-buttons">
                    <button class="btn btn-sky btn-sm">Editar</button>
                    <button class="btn btn-danger btn-sm" style="margin-left:10px">Eliminar</button>
                </div>
            </div>
            <!--Widget Body-->
            <div class="widget-body">
                <div class="row">
                    <div class="col-xs-12">
                        <!-- Filter area -->
                        <div class="row" style="margin-bottom:30px">
                            <!-- search bar -->
                            <div class="col-md-6">
                                <span class="input-icon">
                                    <input type="text" class="form-control" id="glyphicon-search" placeholder="Buscar">
                                    <i class="glyphicon glyphicon-search blue"></i>
                                </span>
                            </div>
                            <div class="col-md-offset-4 col-md-2" style="">
                                <button class="btn btn-success btn-block">Agregar integrante</button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <p>Mostrando 10 de 20</p>
                            </div>
                        </div>
                        <!-- Users box -->
                        <div class="row">
                            <div class="col-lg-3 col-sm-4 col-xs-12">
                                <div class="databox databox-graded">
                                    <div class="databox-left no-padding">
                                        <img src="~/assets/img/avatars/Javi-Jimenez.jpg" style="width:65px; height:65px;">
                                    </div>
                                    <a href="@Url.Action("Profile")">
                                        <div class="databox-right padding-top-20 bg-whitesmoke">
                                            <div class="databox-text darkgray" style="font-size:14px">JAVI JIMENEZ</div>
                                            <div class="databox-text darkgray"><i class="fa fa-envelope"></i>cjimenez13@outlook.com</div>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>  
            </div>
        </div>
    </div>
</div>
