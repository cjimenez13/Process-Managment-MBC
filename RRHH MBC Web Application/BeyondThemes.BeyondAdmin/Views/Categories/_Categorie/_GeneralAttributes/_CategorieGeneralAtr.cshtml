@model Model.GeneralAttributesModel
<div class="row">
    <div class="col-xs-12">
        <div class="row" style="margin-bottom:20px">
            <div class="col-md-12">
                <h2>Datos relacionados solamente con la categoría</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="table-scrollable">
                    <table class="table table-hover" id="table-generalAttributes">
                        <!-- column titles -->
                        <thead class="">
                            <tr>
                                <th>Atributo</th>
                                <th>Tipo</th>
                                <th>Valor actual</th>
                                <th>Habilitado</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Table data-->
                            @{ Html.RenderPartial("/Views/Categories/_Categorie/_GeneralAttributes/_GeneralAttrList.cshtml", Model);}
                            <!--Spaces for add new row -->
                            <tr>
                                @using (Ajax.BeginForm("_AddGeneralAttribute", "Categories", new AjaxOptions { HttpMethod = "POST", OnSuccess = "GeneralAttributeAddedSuccess", OnFailure = "GeneralAttributeAddedFailure" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.HiddenFor(m => m.categorie_idA)
                                    <td>
                                        @Html.TextBoxFor(m => m.attributeA, new { @class = "form-control", @placeholder = "", @style = "min-width:15rem" })
                                        @Html.ValidationMessageFor(m => m.attributeA, "", new { @class = "text-danger" })
                                    </td>
                                    <td>
                                        @Html.DropDownListFor(m => m.id_typeA, Model._TypeSelect, new { @class = "form-control", @style = "min-width:18rem",@onchange = "onGeneralAttrChange(this)" })
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(m => m.valueA, new { @class = "form-control", @placeholder = "", @style = "min-width:20rem" })
                                        @Html.ValidationMessageFor(m => m.valueA, "", new { @class = "text-danger" })
                                    </td>
                                    <td>
                                        <div class="form-group">
                                            <div class="checkbox" style="margin-left:25%">
                                                @Html.CheckBoxFor(m => m.isEnabledA, new { @checked = "checked", @class = "colored-success", @disabled = "true" })
                                                <span class="text"></span>
                                            </div>
                                        </div>
                                    </td>
                                    <td style="width:5%">
                                        <button class="btn btn-success btn-sm" type="submit" style="margin-left:25px" data-toggle="tooltip" data-placement="top" title="Agregar">
                                            <span class="glyphicon glyphicon-plus"></span>
                                        </button>
                                    </td>
                                }
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
