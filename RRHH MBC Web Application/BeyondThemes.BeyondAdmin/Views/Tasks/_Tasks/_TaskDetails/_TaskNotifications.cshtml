@model Model.TaskNotificationsModel
@{ 
    string isDisabled = "disabled";
    if (Model.taskDTO.taskState_id == "0")
    {
        isDisabled = "";
    }
}
<div class="row" style="margin-bottom:20px;">
    <div class="col-xs-9">
        <h2>Notificaciones</h2>
    </div>
    <div class="col-xs-3">
        <button class="btn btn-success pull-right" style="margin-top:15px" data-toggle="modal" data-target="#modal_addTaskNotification" @isDisabled>
            <span class="visible-xs"><i class="fa fa-plus"></i></span>
            <span class="hidden-xs">Agregar notificación</span>
        </button>
    </div>
</div>
<div class="row" style="margin-bottom:20px;">
    <div class="col-xs-12">
        <div class="row">
            <div class="col-xs-12" style="margin-bottom:20px;">
                <div class="table-scrollable">
                    <table class="table table-hover" id="table-taskNotifications">
                        <!-- column titles -->
                        <thead>
                            <tr>
                                <th>Mensaje</th>
                                <th>Tipos</th>
                                <th>Configuración</th>
                                <th>Eliminar</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Table data-->
                            @{ Html.RenderPartial("/Views/Tasks/_Tasks/_TaskDetails/_TaskNotificationsList.cshtml", Model);}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@if (Model.taskDTO.taskState_id =="0")
{
    { Html.RenderPartial("/Views/Tasks/_Tasks/_TaskDetails/_AddTaskNotification.cshtml", new Model.AddTaskNotificationModel(Model.taskDTO.id_task));}
}

