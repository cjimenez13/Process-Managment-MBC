@model Model.AddTaskFileModel

<div class="modal fade" id="modal_addTaskFile" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @using (Ajax.BeginForm("/Tasks/uploadTaskFile", "Tasks", new AjaxOptions { HttpMethod = "POST"}))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.id_task)
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Añadir archivo</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                @Html.LabelFor(m => m.name)
                                @Html.TextBoxFor(m => m.name, new { @class = "form-control", @placeholder = "" })
                                @Html.ValidationMessageFor(m => m.name, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.description)
                                @Html.TextAreaFor(m => m.description, new { @class = "form-control", @placeholder = "", @rows = "3" })
                                @Html.ValidationMessageFor(m => m.description, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <input type="file" name="file" id="taskFileUpload" class="filestyle" required />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" data-dismiss="modal" onclick="uploadTaskFile(event, this)">Cargar</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                </div>
            }
        </div>
    </div>
</div>