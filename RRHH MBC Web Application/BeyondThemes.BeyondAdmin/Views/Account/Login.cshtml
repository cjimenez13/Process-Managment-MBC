@using BeyondThemes.BeyondAdmin.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar sesión";
    ViewBag.Description = "Inicio de sesión";
    Layout = "~/Views/Shared/_Empty.cshtml";
}

<div class="login-container animated fadeIn" style="margin: 5% auto;">
    <div class="row" style="margin-bottom:15px">
        <div class="col-md-12">
            <img alt="image" class="img-responsive" src="~/assets/img/logoMBC.png">
        </div>
    </div>
    <div class="loginbox bg-white">
        <div class="loginbox-title">Inicio de Sesión</div>
        <div class="loginbox-or">
            <div class="or-line"></div>
        </div>
        @using (var form = Html.Bootstrap().Begin(new Form().Type(FormType.Vertical)))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.AntiForgeryToken()
            <div class="loginbox-textbox">
                @Html.Bootstrap().TextBoxFor(t => t.Email).Placeholder("Correo o usuario")
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
            <div class="loginbox-textbox">
                @Html.Bootstrap().PasswordFor(t => t.Password).Placeholder("Contraseña")
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
                <div class="loginbox-forgot">
                    <a href="" data-toggle="modal" data-target="#modal_passwordForgotted">Olvidó la contraseña?</a>
                </div>
            <div class="loginbox-submit">
                @Html.Bootstrap().SubmitButton().Text("Iniciar sesión").Color(BootstrapColors.Primary).ButtonBlock()
            </div>
        }
    </div>
    <div class="logobox">
    </div>
</div>

<div class="modal fade" id="modal_passwordForgotted" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="top:15%;">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            @using (Ajax.BeginForm("_ResetPassword", "Account", new AjaxOptions { HttpMethod = "POST", OnSuccess = "PasswordChangedSuccess", OnFailure = "PasswordChangeFailure" }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Recuperar contraseña</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label>Ingrese el correo asociado a la cuenta </label>
                                @Html.TextBoxFor(m => m.email, new { @class = "form-control", @placeholder = "" })
                                @Html.ValidationMessageFor(m => m.email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Enviar</button>
                    <button class="btn btn-default" data-dismiss="modal">Cerrar</button>
                </div>
            }
        </div>
    </div>
</div>


@section PageScripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        function passwordForgoted(){
            $('')
        }
    </script>
}