@model Model.AddScriptModel

<!-- Modal to add scripts-->
<div class="modal fade" id="modal_addScript" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        @using (Ajax.BeginForm("_AddScript", "Scripts", new AjaxOptions { HttpMethod = "POST", OnSuccess = "ScriptAddedSuccess", OnFailure = "ScriptAddedFailure" }))
        {
            @Html.AntiForgeryToken()
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Nueva Consulta</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <form role="form">
                            <div class="form-group" style="margin-bottom:20px">
                                <h4>Seleccione la manera en que desea realizar la consulta:</h4>
                                <div class="radio">
                                    <label class="radio-inline">
                                        <input name="scriptType" type="radio" checked="checked" value="text">
                                        <span class="text">Texto </span>
                                    </label>
                                    <label class="radio-inline">
                                        <input name="scriptType" type="radio" class="inverted" value="file">
                                        <span class="text">Archivo</span>
                                    </label>
                                </div>
                            </div>
                            <div class="form-group" id="formGroup-scriptText">
                                <label for="exampleInputFile">Ingrese su consulta</label>
                                <textarea class="form-control" placeholder="" name="scriptText" rows="5"></textarea>
                            </div>
                            <div class="form-group" id="formGroup-scriptFile" style="display:none">
                                <input type="file" name="scriptFile" id="scriptFileUpload" class="filestyle" />
                            </div>

                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" onclick="postScriptAdded(event,this)">Ejecutar</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
        }

        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
