@model Model.ProcessModel
@{
    Layout = "~/Views/Shared/_Default.cshtml";
    ViewBag.Title = "Gestion #"+Model.processDTO.id_processManagment;
    ViewBag.Description = Model.processDTO.name;
    int completedPorcentage = 0;
    if (Model.processDTO.totalTasks != "0")
    {
        completedPorcentage = Int32.Parse(Model.processDTO.completedTasks) * 100 / Int32.Parse(Model.processDTO.totalTasks) ;
    }
    string createdBy_name = Model.userDTO.name + " " + Model.userDTO.fLastName + " " + Model.userDTO.sLastName;
}
<div class="row">
    <div class="col-xs-12">
        <div class="widget radius-bordered">
            <div class="widget-header">
                <span class="widget-caption">Gestión #@Html.Raw(Model.processDTO.id_processManagment)</span>
                <div class="widget-buttons">
                    <button class="btn btn-sky btn-sm" data-toggle="modal" data-target="#modal_editProcess" type="button">Editar</button>
                </div>
                <div class="widget-buttons">
                    @using (Ajax.BeginForm("_DeleteProcess", "Processes", new AjaxOptions { HttpMethod = "DELETE", OnSuccess = "ProcessDeletedSuccess", OnFailure = "ProcessDeletedFailure" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("id_process",Model.processDTO.id_processManagment)
                           <button class="btn btn-danger btn-sm" type="submit">Eliminar</button>
                    }
                </div>
            </div>
            <div class="widget-body">
                <div class="row" style="font-size:14px; margin-top:25px; margin-bottom:10px">
                    <div class="col-xs-12">
                        <div class="col-md-4 col-xs-6">
                            <dl class="dl-horizontal">
                                <dt>Nombre</dt><dd id="processNameText">@Html.Raw(Model.processDTO.name)</dd>
                                <dt># Gestión</dt><dd>#@Html.Raw(Model.processDTO.id_processManagment)</dd>
                                <dt>Tipo</dt><dd>@Html.Raw(Model.processDTO.template_name) </dd>
                                <dt>Creado por</dt><dd>@Html.Raw(createdBy_name) </dd>
                            </dl>
                        </div>
                        <div class="col-md-4 col-xs-6">
                            <dl class="dl-horizontal">
                                <dt>Estado</dt><dd><span class="label" style="background-color:@Model.processDTO.state_color">@Html.Raw(Model.processDTO.state_name)</span></dd>
                                <dt>Creado</dt><dd>@Html.Raw(Model.processDTO.createdDate)</dd>
                                <dt>Gestión anterior</dt>
                                <dd>
                                    @if (String.IsNullOrEmpty(Model.processDTO.previousProcess))
                                    {
                                        @:-
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("Process", "Processes", new { id = Model.processDTO.previousProcess})">#@Html.Raw(Model.processDTO.previousProcess)</a>
                                    }
                                </dd>
                                <dt>Siguiente gestión</dt>
                                <dd>
                                    @if (String.IsNullOrEmpty(Model.processDTO.nextProcess))
                                    {
                                        @:-
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("Process", "Processes", new { id = Model.processDTO.nextProcess})">#@Html.Raw(Model.processDTO.nextProcess)</a>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
                <!-- Project progress -->
                <div class="row" style="font-size:14px;">
                    <div class="col-md-8 col-xs-12">
                        <dl class="dl-horizontal">
                            <dt style="margin-bottom:10px">Completado</dt>
                            <dd style="width:60%">
                                <div class="progress">
                                    <div class="progress-bar progress-bar-success progress-bar-striped" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: @completedPorcentage%">
                                        <span class="sr-only">10% Complete (success)</span>
                                    </div>
                                </div>
                            </dd>
                        </dl>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <div class="widget-main ">
                            @using (var tabs = Html.Bootstrap().Begin(new Tabs("FlatTab").Flat()))
                            {
                                tabs.Tab("Etapas");
                                tabs.Tab("Participantes");
                                tabs.Tab("Actividad");
                                <!-- Etapas -->
                                using (tabs.BeginPanel())
                                {
                                    <div class="row">
                                        <div class="col-xs-12" style="margin-bottom:10px">
                                            <h3>Etapas</h3>
                                        </div>
                                        <div class="col-lg-9 col-md-9 col-xs-12" id="StagesListDiv">
                                            @{ Html.RenderPartial("/Views/Templates/_Template/_Stages/_StagesList.cshtml", new Model.StagesListModel(Model.processDTO.id_processManagment));}
                                        </div>
                                    </div>                                }
                                <!-- Participantes -->
                                using (tabs.BeginPanel())
                                {
                                    <div class="row" style="margin-bottom:30px">
                                        <!-- search bar -->
                                        <div class="col-md-6 col-xs-8">
                                            <span class="input-icon">
                                                <input type="text" class="form-control" id="glyphicon-search" placeholder="Buscar" onkeyup="filterParticipantsUsers(this)">
                                                <i class="glyphicon glyphicon-search blue"></i>
                                            </span>
                                        </div>
                                        <div class="col-lg-offset-3 col-lg-3 col-md-offset-2 col-md-4 col-xs-4">
                                            <div class="col-xs-6">
                                                <button class="btn btn-success" style="float:right" data-toggle="modal" data-target="#modal_addGroupParticipants">
                                                    <span class="visible-xs"><i class="fa fa-users"></i></span>
                                                    <span class="hidden-xs">Agregar grupo</span>
                                                </button>
                                            </div>
                                            <div class="col-xs-6">
                                                <button class="btn btn-success" style="float:right" data-toggle="modal" data-target="#modal_addParticipantUser">
                                                    <span class="visible-xs"><i class="fa fa-user"></i></span>
                                                    <span class="hidden-xs">Agregar integrante</span>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-12" id="participantsListDiv">
                                            @{ Html.RenderPartial("/Views/Templates/_Template/_Participants/_TemplateParticipantsList.cshtml", Model.participantsModel);}
                                        </div>
                                    </div>
                                }
                                <!-- Actividad -->
                                using (tabs.BeginPanel())
                                {
                                    Html.RenderPartial("/Views/Processes/_Process/_ProcessActivity.cshtml", Model);
                                }
                            }
                        </div>
                    </div>
                </div>            
            </div>
        </div>
    </div>
</div>
<!-- Modal to add a user on participants-->
@{ Html.RenderPartial("/Views/Templates/_Template/_Participants/_AddParticipantUser.cshtml", new Model.AddParticipantUserModel(Model.processDTO.id_processManagment));}
<!-- Modal to add a group on participants-->
@{ Html.RenderPartial("/Views/Templates/_Template/_Participants/_AddGroup.cshtml", new Model.AddGroupModel(Model.processDTO.id_processManagment));}
<!-- Modal to edit process-->
@{ Html.RenderPartial("/Views/Processes/_Process/_EditProcess.cshtml", new Model.EditProcessModel(Model.processDTO));}
@section PageScripts{
<script src="https://code.jquery.com/ui/1.11.4/jquery-ui.min.js"></script>
<script src="/assets/js/select2/select2.js"></script>
<script src="~/Scripts/Templates/Template/Participants.js"></script>
<script src="~/Scripts/Templates/Template/Stages.js"></script>
<script src="~/Scripts/Process/_Process.js"></script>
}