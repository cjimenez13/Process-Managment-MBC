@model Model.UserNotificationsModel
<li>
    <a class="dropdown-toggle" data-toggle="dropdown" title="Help" href="#">
        <i class="icon fa fa-bell"></i>
        <span class="badge">@Model.userNotifications.Count</span>
    </a>
    <!--Messages Dropdown-->
    <ul class="pull-right dropdown-menu dropdown-arrow dropdown-messages">
        @foreach (var notification in Model.userNotifications)
        {
            <li>
                <a href="#">
                    @*<img src="~/assets/img/avatars/divyia.jpg" class="message-avatar" alt="Divyia Austin">*@
                    <div class="message" style="width:270px">
                        <span class="message-sender">
                            Gestión #@notification.process_id
                        </span>
                        <span class="message-time">
                            @notification.sended_date
                        </span>
                        <span class="message-subject">
                            @notification.task_name 
                        </span>
                        <span class="message-body">
                            @notification.message
                        </span>
                    </div>
                </a>
            </li>
        }
    </ul>
    <!--/Messages Dropdown-->
</li>
