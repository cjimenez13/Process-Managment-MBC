@model Model.PermissionsModel

<table class="table flip-content table-hover" id="rolesTable">
    <!-- column titles -->
    <thead class="flip-content bordered-primary">
        <tr>
            <th style="width:15%">Habilitado</th>
            <th>Permiso</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var permission in Model.permissionsList)
        {
            string onclickPermission = String.Format("getPermissionElements('{0}')", permission.id_role_permission);
            string isChecked = permission.isEnabled == "True" ? "checked" : "";
            string rowClass = permission.isEnabled == "True" ? "success" : "";
            <tr class="@rowClass">
                <td>
                    <div class="checkbox" style="margin:0px">
                        <label style="margin-left:15px">
                            <input type="checkbox" class="colored-success" @isChecked onchange="permissionChanged(@permission.id_role_permission, '@permission.name', this)">
                            <span class="text"></span>
                        </label>
                    </div>
                </td>
                <td onclick="@onclickPermission">@permission.name</td>
            </tr>
        }
    </tbody>
</table>






