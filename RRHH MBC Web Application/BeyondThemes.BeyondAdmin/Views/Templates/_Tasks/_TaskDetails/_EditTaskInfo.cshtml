@model Model.EditTaskInfo
<div class="modal fade" id="modal_editTask" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
        @using (Ajax.BeginForm("_EditTask", "Tasks", null, new AjaxOptions { HttpMethod = "PUT", OnSuccess = "TaskUpdatedSuccess", OnFailure = "TaskUpdatedFailure" }, new { @class = "form-horizontal", @id = "formEditGeneralInfo" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.id_taskE)
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Editar tarea</h4>
            </div>
            <div class="modal-body ">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row" style="margin-top:10px;">
                            <div class="col-xs-12">

                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">Nombre:</label>
                                        <div class="col-sm-10">
                                            @Html.TextBoxFor(model => model.nameE, new { @class = "form-control", @placeholder = "Nombre de la tarea", @form = "formEditGeneralInfo" })
                                            @Html.ValidationMessageFor(model => model.nameE, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">Descripción:</label>
                                        <div class="col-sm-10">
                                            @Html.TextAreaFor(model => model.descriptionE, new { @class = "form-control", @placeholder = "Descripción...", @form = "formEditGeneralInfo", @Rows = "3" })
                                            @Html.ValidationMessageFor(model => model.descriptionE, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label">Tiempo:</label>
                                        <div class="col-sm-2">
                                            <select onchange="timeChangedEdit(this)" form="formEditGeneralInfo" name="timeSelectedE">
                                                <option selected="selected" value="time">Tiempo</option>
                                                <option value="date">Fecha</option>
                                            </select>
                                        </div>
                                        <div class="col-xs-7">
                                            <div class="col-xs-6" id="daysAmountEditDiv">
                                                <div class="col-xs-3">
                                                    <label for="inputEmail3" class="control-label">Dias:</label>
                                                </div>
                                                <div class="col-xs-6">
                                                    <div class="spinbox spinbox-right" id="timeAmountDiv">
                                                        <div class="spinbox-buttons	btn-group btn-group-vertical ">
                                                            <button type="button" class="btn spinbox-up success">
                                                                <i class="fa fa-plus"></i>
                                                            </button>
                                                            <button type="button" class="btn spinbox-down danger">
                                                                <i class="fa fa-minus"></i>
                                                            </button>
                                                        </div>
                                                        @Html.TextBoxFor(model => model.daysAvailableE, new { @class = "spinbox-input form-control", @form = "formEditGeneralInfo", })
                                                        @Html.ValidationMessageFor(model => model.daysAvailableE, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-xs-6" id="hourAmountEditDiv">
                                                <div class="col-xs-4">
                                                    <label for="inputEmail3" class="control-label" style="margin-right:10px">Horas:</label>
                                                </div>
                                                <div class="col-xs-6">
                                                    <div class="spinbox spinbox-right">
                                                        <div class="spinbox-buttons	btn-group btn-group-vertical ">
                                                            <button type="button" class="btn spinbox-up success">
                                                                <i class="fa fa-plus"></i>
                                                            </button>
                                                            <button type="button" class="btn spinbox-down danger">
                                                                <i class="fa fa-minus"></i>
                                                            </button>
                                                        </div>
                                                        @Html.TextBoxFor(model => model.hoursAvailableE, new { @class = "spinbox-input form-control", @form = "formEditGeneralInfo", })
                                                        @Html.ValidationMessageFor(model => model.hoursAvailableE, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div style="display:none" id="timeDateEditDiv">
                                                <div class="col-xs-6">
                                                    <div class="input-group" id="timeDate">
                                                        @Html.TextBoxFor(model => model.finishDateE, new { @class = "form-control date-picker", @form = "formEditGeneralInfo", data_date_format = "dd-mm-yyyy" })
                                                        <span class="input-group-addon">
                                                            <i class="fa fa-calendar"></i>
                                                        </span>
                                                    </div>
                                                    @Html.ValidationMessageFor(model => model.finishDateE, "", new { @class = "text-danger" })
                                                </div>
                                                <div class="col-xs-6">
                                                    @Html.TextBoxFor(model => model.finishTimeE, new { @class = "form-control", @form = "formEditGeneralInfo", data_mask = "99:99:99", @placeholder = "00:00:00" })
                                                    @Html.ValidationMessageFor(model => model.finishTimeE, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
             }
        </div>
    </div>
</div>




