<div class="widget radius-bordered">
    <div class="widget-header bordered-bottom bordered-sky">
        <span class="widget-caption">Formulario</span>
        <div class="widget-buttons">
            <a href="#" data-toggle="collapse">
                <i class="fa fa-minus danger"></i>
            </a>
        </div>
    </div>
    <div class="widget-body">
        <div class="row">
            <div class="col-xs-12">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="flip-scroll">
                            <table class="table flip-content table-hover">
                                <!-- column titles -->
                                <thead class="flip-content ">
                                    <tr>
                                        <th>Atributo</th>
                                        <th>Tipo</th>
                                        <th>Valor</th>
                                        <th>Lista</th>
                                        <th>Habilitado</th>
                                        <th>Accion</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Table data-->
                                    <tr>
                                        <td>
                                            <div class="entry input-group">
                                                <input class="form-control" name="fields[]" type="text" />
                                            </div>
                                        </td>
                                        <td>
                                            <select class="form-control">
                                                <option>Texto</option>
                                                <option>Numero entero</option>
                                                <option>Numero décimal</option>
                                                <option>Fecha</option>
                                                <option>Condición</option>
                                                <option>Lista</option>
                                            </select>
                                        </td>
                                        <td>
                                            <div class="entry input-group">
                                                <input class="form-control" name="fields[]" type="text" />
                                            </div>
                                        </td>
                                        <td>
                                            <select id="e1" style="width:100%;">
                                                <option selected="selected">Solicitud</option>
                                                <option>Visto Bueno</option>
                                                <option>Tareas</option>
                                                <option>Recordatorio</option>
                                            </select>
                                        </td>
                                        <td>
                                            @Html.Bootstrap().CheckBox("form-field-checkbox").IsChecked(true).HtmlAttributes(new { @class = "colored-success" })
                                        </td>
                                        <td>
                                            <button class="btn btn-success btn-sm btn-add" type="button">
                                                <span class="glyphicon glyphicon-plus"></span>
                                            </button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
