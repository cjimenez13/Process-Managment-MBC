@model Model.UpdateUserModel

<div class="form-title">
    Informacion personal
</div>
@using (Ajax.BeginForm("_ProfileConfigInfo", "Users", new AjaxOptions { HttpMethod = "PUT", OnSuccess = "CompletedFormRegister" }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                @Html.LabelFor(model => model.name)
                @Html.TextBoxFor(m => m.name, new { @class = "form-control", @placeholder = "" })
                @Html.ValidationMessageFor(m => m.name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.fLastName)
                @Html.TextBoxFor(m => m.fLastName, new { @class = "form-control", @placeholder = "" })
                @Html.ValidationMessageFor(m => m.fLastName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.sLastName)
                @Html.TextBoxFor(m => m.sLastName, new { @class = "form-control", @placeholder = "" })
                @Html.ValidationMessageFor(m => m.sLastName, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.cedula)
                @Html.TextBoxFor(m => m.cedula, new { @class = "form-control", @placeholder = "" })
                @Html.ValidationMessageFor(m => m.cedula, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                @Html.LabelFor(model => model.email)
                @Html.TextBoxFor(m => m.email, new { @class = "form-control", @placeholder = "" })
                @Html.ValidationMessageFor(m => m.email, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.userName)
                @Html.TextBoxFor(m => m.userName, new { @class = "form-control", @placeholder = "" })
                @Html.ValidationMessageFor(m => m.userName, "", new { @class = "text-danger" })

            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.phoneNumber)
                @Html.TextBoxFor(m => m.phoneNumber, new { @class = "form-control", @placeholder = "" })
                @Html.ValidationMessageFor(m => m.phoneNumber, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.birthdate)
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-calendar"></i>
                    </div>
                    @Html.TextBoxFor(m => m.birthdate, new { @class = "form-control", @placeholder = "dd/mm/yyyy" })
                </div>
                @Html.ValidationMessageFor(m => m.birthdate, "", new { @class = "text-danger" })
            </div>

        </div>
    </div>
    <hr class="wide">
    <!-- User location info-->
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                @Html.LabelFor(model => model.province)
                @Html.DropDownListFor(m => m.province_id, new SelectList(Model._ProvincesSelect, "Value", "Text"), new { @class = "form-control", @id = "province_id", @onchage = "Model.refreshCantones()" })
                @Html.ValidationMessageFor(m => m.province, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.canton)
                @Html.DropDownListFor(m => m.canton_id, new SelectList(Model._CantonesSelect, "Value", "Text"), new { @class = "form-control", @id = "canton_id" })
                @Html.ValidationMessageFor(m => m.canton, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                @Html.LabelFor(model => model.direction)
                @Html.TextAreaFor(m => m.direction, new { @class = "form-control", @placeholder = "Dirección...", @rows = "3" })
                @Html.ValidationMessageFor(m => m.direction, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-offset-11 col-xs-offset-9">
            <button class="btn btn-primary" type="submit" >Guardar</button>
        </div>
    </div>
}
<!-- User photo -->
<div class="row">
    <div class="col-xs-12">
        <div class="row">
            <div class="col-xs-12">
                <label>Foto</label>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-xs-8">
                <div class="form-group">
                    <input type="file" name="file" id="userPhotoUpload" class="filestyle" accept="image/*" required />
                </div>
            </div>
            <div class="col-md-6 col-xs-4">
                <label></label>
                @{
                    String onclick = String.Format("uploadPhoto('{0}')", Model.userName);
                }
                <button class="btn btn-primary" id="btnUpload" onclick="@onclick">Cambiar</button>
            </div>
        </div>
    </div>
</div>
